<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ConstraintLayoutStyle">
        <item name="android:padding">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">12sp</item>
    </style>

    <style name="RecyclerviewStyle">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">0sp</item>
<!--        <item name="android:layout_marginTop">12sp</item>-->
    </style>

    <style name="RecyclerviewTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8sp</item>
    </style>

    <style name="RecyclerviewListItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">24sp</item>
<!--        <item name="android:padding">8sp</item>-->
    </style>

    <style name="DisplayFieldStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditFieldStyle" parent="DisplayFieldStyle">
        <item name="android:inputType">text</item>
        <item name="android:layout_marginEnd">8sp</item>
    </style>

    <style name="DateFieldStyle" parent="EditFieldStyle">
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="GuidelineStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FABStyle" parent="ButtonStyle">
        <item name="android:layout_margin">16sp</item>
    </style>
</resources>